<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.Author">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/author_photo"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/kevin_picture"
            app:civ_border_color="#FF5722"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/developer_name"
            android:textColor="#090909"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/author_photo"
            app:layout_constraintStart_toStartOf="@+id/author_photo"
            app:layout_constraintTop_toBottomOf="@+id/author_photo" />

        <TextView
            android:id="@+id/emailID"
            style="@style/PlayerDetailFont2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/email"
            app:layout_constraintEnd_toEndOf="@+id/author_photo"
            app:layout_constraintStart_toStartOf="@+id/author_photo"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>